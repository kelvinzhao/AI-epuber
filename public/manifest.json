{
    "manifest_version": 3,
    "name": "AI-EPUBER",
    "version": "1.0.0",
    "description": "AI赋能的epub阅读与管理扩展",
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_icon": {
        "16": "icon16.png",
        "32": "icon48.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "permissions": [
      "storage",
      "tabs"
    ],
    "host_permissions": [],
    "icons": {
      "16": "icon16.png",
      "32": "icon48.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }